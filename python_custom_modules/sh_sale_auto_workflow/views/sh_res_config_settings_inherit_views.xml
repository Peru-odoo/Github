<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="res_config_settings_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='connectors_setting_container']" position="after">
                <block title="Auto Sale Workflow Settings" >
                        <setting id="auto_sale_workflow_setting_container">
                            <field name="enable_auto_workflow" widget="upgrade_boolean"/>
                            <field name="default_workflow"/>
                        </setting>
                    </block>
            </xpath>
        </field>
    </record>
</odoo>