<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sh_sale_order_line_inherit" model="ir.ui.view">
        <field name="name">model.name.view.form.inherit</field>
        <field name="model">model.name</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='no_stock_alternative']" position="after">
                
                <button name="replace_button_action" string="Alternative Product" type="object" class="oe_highlight"/>
                
            </xpath>
        </field>
    </record>
</odoo>