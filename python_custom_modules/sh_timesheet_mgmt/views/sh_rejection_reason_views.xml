<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sh_rejection_reason_view_form" model="ir.ui.view">
        <field name="name">sh.rejection.reason.view.form</field>
        <field name="model">sh.rejection.reason</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>        
                    </group>
                </sheet>
                <footer>
                    <button string="Save" name="save_wizard_action" type="object" class="oe_highlight"/>
                    <button string="Discard" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sh_rejection_reason_action" model="ir.actions.act_window">
        <field name="name">Rejection Reason</field>
        <field name="res_model">sh.rejection.reason</field>
        <field name="view_mode">form</field>
    </record>
</odoo>