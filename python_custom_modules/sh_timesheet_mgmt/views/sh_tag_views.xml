<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sh_tag_view_form" model="ir.ui.view">
        <field name="name">sh.tag.view.form</field>
        <field name="model">sh.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>      
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_tag_view_tree" model="ir.ui.view">
        <field name="name">sh.tag.view.tree</field>
        <field name="model">sh.tag</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="sh_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">sh.tag</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>