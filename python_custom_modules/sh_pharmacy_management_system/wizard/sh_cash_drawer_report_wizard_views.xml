<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sh_cash_drawer_report_wizard" model="ir.ui.view">
        <field name="name">sh.cash.drawer.report.wizard.view.form</field>
        <field name="model">sh.cash.drawer.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sh_wiz_from_date"/>        
                        <field name="sh_wiz_to_date"/>
                        <field name="sh_wiz_cashier_id"/>
                    </group>
                    <footer>
                        <button string="Generate" name="export_report_action" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_cash_drawer_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Cash Drawer Report</field>
        <field name="res_model">sh.cash.drawer.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
