<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sh_allergy_type_view_form" model="ir.ui.view">
        <field name="name">sh.allergy.type.view.form</field>
        <field name="model">sh.allergy.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_allergy_type_view_list" model="ir.ui.view">
        <field name="name">sh.allergy.type.view.list</field>
        <field name="model">sh.allergy.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="sh_allergy_type_action" model="ir.actions.act_window">
        <field name="name">Allergy Type</field>
        <field name="res_model">sh.allergy.type</field>
        <field name="view_mode">list,form</field>    
    </record>
</odoo>