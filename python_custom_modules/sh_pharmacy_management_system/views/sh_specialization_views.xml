<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sh_specialization_view_form" model="ir.ui.view">
        <field name="name">sh.specialization.view.form</field>
        <field name="model">sh.specialization</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>        
                        <field name="sh_description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_specialization_view_list" model="ir.ui.view">
        <field name="name">sh.specialization.view.list</field>
        <field name="model">sh.specialization</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>                        
            </list>
        </field>
    </record>

    <record id="sh_specialization_action" model="ir.actions.act_window">
        <field name="name">Specialization</field>
        <field name="res_model">sh.specialization</field>
        <field name="view_mode">list,form</field>        
    </record>
</odoo>