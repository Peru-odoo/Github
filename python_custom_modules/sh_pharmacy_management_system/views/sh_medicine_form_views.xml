<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sh_medicine_form_view_form" model="ir.ui.view">
        <field name="name">sh.medicine.form.view.form</field>
        <field name="model">sh.medicine.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_medicine_form_view_list" model="ir.ui.view">
        <field name="name">sh.medicine.form.view.list</field>
        <field name="model">sh.medicine.form</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="sh_medical_form_action" model="ir.actions.act_window">
        <field name="name">Medical Form</field>
        <field name="res_model">sh.medicine.form</field>
        <field name="view_mode">list,form</field>        
    </record>
</odoo>