<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sh_reject_action_wizard_view_form" model="ir.ui.view">
        <field name="name">sh.reject.action.wizard.view.form</field>
        <field name="model">sh.reject.action.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sh_reason"/>        
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" name="confirm_action" type="object" class="oe_highlight"/>
                    <button string="Discard" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>